    "text-encoding": "^0.7.0",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "clean": "tsc -b --clean",
    "tsc": "tsc -p ./config/tsconfig.json",
    "test:unit": "jest --coverage --maxWorkers 50% --config ./config/jest.config.js unit",
    "test:integration": "jest --coverage --maxWorkers 50% --config ./config/jest.config.js integration",
    "test": "npm run test:unit && npm run test:integration",
    "lint": "npx eslint src -c config/.eslintrc.js",
    "lint:style": "npx stylelint src --config config/.stylelintrc.json",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "deploy": "gh-pages -d build",
    "build:deploy": "npm run build && npm run deploy"
  },
  "babel": {
    "extends": "./config/.babelrc.json"
  },
  "eslintConfig": {
    "extends": "./config/.eslintrc.js"
  },
  "stylelint": {
    "extends": "./config/.stylelintrc.json"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
