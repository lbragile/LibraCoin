{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ES2017"],
    "allowJs": true,
    "watch": true,
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "../dist"
  },
  "include": ["../src"],
  "exclude": ["../node_modules", "../build"]
}
